<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.UpdateBook">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />

    <Spinner
        android:id="@+id/spnCategoryBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edUpdateAuthorBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào tên tác giả" />

    <EditText
        android:id="@+id/edUpdatePublisherBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào tên Nhà Xuất bản" />

    <EditText
        android:id="@+id/edUpdatePriceBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào giá mới" />

    <EditText
        android:id="@+id/edUpdateInStockBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào số lượng tồn kho" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnUpdateBook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cập nhật" />

        <Button
            android:id="@+id/btnExitUpdateBook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy" />

    </LinearLayout>

</LinearLayout>